{% include 'partials/header.twig' %}
<div class="container">
    <h1>Items</h1>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
        {% for item in items %}
            <tr>
                <td>{{item.id}}</td>
                <td>{{item.name}}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">We don't have any items</td>
            </tr>
        {% endfor %}
    </table>
    <a href="/items/new" class="btn btn-default">Add new item</a>
</div>
{% include 'partials/footer.twig' %}
